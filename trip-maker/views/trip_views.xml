<odoo>
    <record id="trips_action" model="ir.actions.act_window">
        <field name="name">Trips</field>
        <field name="res_model">trip</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="trips_view_tree" model="ir.ui.view">
        <field name="name">trip.tree</field>
        <field name="model">trip</field>
        <field name="arch" type="xml">
            <tree string="Channel" expand="1">
                <field name="name"/>
                <field name="schedule"/> 
                <field name="origin"/>
                <field name="destination"/>
                <field name="distance"/> 
            </tree>
        </field>
    </record>
    <record id="trip_view_form" model="ir.ui.view">
        <field name="name">trip.form</field>
        <field name="model">trip</field>
        <field name="arch" type="xml">
            <form string="Channel">
                <sheet>
                        <div>
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                    <group>    
                        <group>
                            <field name="schedule"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group col="3">
                                    <field name="origin"/>
                                    <field name="destination"/>
                                    <field name="distance"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!---->
</odoo>